{
    "manifest_version" : 2,
    "name" : "Web Tracker",
    "version" : "1.0",
    "description" : "Tracks packets to and from your device.",
    "icons" : {
        "128" : "icon128.png",
        "48" : "icon48.png",
        "16" : "icon16.png"
    },
    "browser_action" : {
        "default_icon" : "icon48.png",
        "default_popup" : "popup.html"
    },
    "content_scripts":[{
        "matches": ["*://a/*"],
        "all_frames" : true,
        "js": ["contentScript.js"]
        }
    ],
    "options_page" : "options.html",
    
    "permissions" : [
        "storage",
        "background",
        "history",
        "tabs",
        "activeTab",
        "http://*/*",
        "https://*/*",
        "http://localhost/*"
    ],

    "background" : {
        "scripts" : ["background.js"]
    }
}